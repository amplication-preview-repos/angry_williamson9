datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TaskFlow {
  comments  String?
  createdAt DateTime @default(now())
  fromUser  String?
  id        String   @id @default(cuid())
  status    String?
  task      Task?    @relation(fields: [taskId], references: [id])
  taskId    String?
  toUser    String?
  updatedAt DateTime @updatedAt
}

model Task {
  assignedTo  String?
  createdAt   DateTime   @default(now())
  createdBy   String?
  description String?
  id          String     @id @default(cuid())
  status      String?
  taskFlows   TaskFlow[]
  title       String?
  updatedAt   DateTime   @updatedAt
}

model TaskStatus {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime        @default(now())
  email     String?         @unique
  firstName String?
  id        String          @id @default(cuid())
  lastName  String?
  password  String?
  roles     EnumUserRoles[]
  updatedAt DateTime        @updatedAt
  username  String          @unique
}

enum EnumUserRoles {
  Option1
}
